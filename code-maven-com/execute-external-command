                    addBadge(icon: "https://github.com/jenkinsci/jenkins/blob/master/war/src/main/webapp/images/32x32/aborted_anime.gif?raw=true", text: "help")
                    addBadge(icon: "code-maven-com/clock_anime.gif", text: "help")
                }
            }
        }
    }
}