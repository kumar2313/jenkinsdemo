pipeline {
    agent any
    stages {
        stage('build') {
            steps {
                script {
                    def disk_size = sh(script: "/home/devopsm/a.sh", returnStdout: true).trim() as String
                    println("disk_size = ${disk_size}")
                    addBadge(icon: "https://cdn.jsdelivr.net/gh/jenkinsci/badge-plugin@master/src/doc/summary.png", text: "help")
                }
            }
        }
    }
}