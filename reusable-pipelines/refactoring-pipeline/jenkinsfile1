pipeline {
    agent any
    
    environment {
      VERSION = '0.1.0'
      RELEASE_VERSION = 'R.2'
    }

    stages {
      stage('Audit tools') {
        steps {
        	script {
	                    def status = sh(returnStatus: true, script: 'mvn -version')
	                    if (status != 0) {
	                        echo "Error: Command exited with status ${status}"
	                    } else {
	                        echo "SUCCESS: Command executed successfully"
	                    }
                }
          sh '''
              git version
              java -version
              a=`mvn -version`
              echo "MAVEN MESSAGE IS - $a"            
          '''
        }
      }

      stage('Unit Test') {
        steps {
          dir('./java-tomcat-sample') {
            sh '''
              echo "Executing Unit Tests..."
              mvn test
          '''
          }
        }
      }

      stage('Build') {
        steps {
          echo "Building version: ${VERSION} with suffix: ${RELEASE_VERSION}"
          echo 'Mention your Application Build Code here!!!'
          sh 'mvn -f java-tomcat-sample/pom.xml clean package'
        }
      }
    }
}
